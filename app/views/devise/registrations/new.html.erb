<div class="vh-100 d-flex justify-content-center align-items-center">
  <div class="container">
    <div class="row d-flex justify-content-center">
      <div class="col-12 col-md-8 col-lg-6">
        <div class="card bg-white">
          <div class="card-body p-5">
            <center>
              <img src="https://luxai.com/wp-content/uploads/2021/03/logo_luxai_small-1.png" alt="LuxAI" class="site-logo-image" data-tf-not-load="1" importance="high" width="120" height="48"></center>
            <br>
            <% if notice %>
            <p class="alert alert-success"><%= notice %></p>
            <% end %>
            <% if alert %>
            <p class="alert alert-danger"><%= alert %></p>
            <% end %>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>
              <p class=" mb-5">Please enter your email and password!</p>
              <div class="mb-3">
                <label for="email" class="form-label ">Email address</label>
                <%= f.email_field :email, autofocus: true, autocomplete: "off", class: "form-control", required: true%>
              </div>
              <div class="mb-3">
                <label for="password" class="form-label ">Password</label>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "current-password", class: "form-control" , required: true%>
              </div>
              <div class="mb-3">
                <label for="password" class="form-label ">Confirm Password</label>
                <%= f.password_field :password_confirmation, autocomplete: "current-password", class: "form-control" , required: true%>
              </div>
              <div class="d-grid">
                <%= f.submit "Sign Up", class: "btn btn-outline-dark" %>
              </div>
            <% end %>
            <br>
            <div class="mb-3">
              <p class="mb-0  text-center">Already have an account? <%= render "devise/shared/links" %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

