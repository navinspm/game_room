<div class="chat-message-right msg-<%= message.user.id %> pb-4">
    <div>
        <img src="<%= user_gravatar(message.user) %>" class="rounded-circle mr-1" alt="Chris Wood" width="40" height="40">
        <div class="text-muted small text-nowrap mt-2"><%= message.created_at.strftime("%m-%d %H:%M") %></div>
    </div>
    <div class="flex-shrink-1 bg-light rounded py-2 px-3 mr-3">
        <div class="font-weight-bold mb-1"><%= message.user.name %></div>
        <% if message.is_last? %>
            <% if message.action == 'show' && message.user.id == message.room.host_id.to_i %>
               Waiting for Player Response
            <% else %>
                Please select any one image
                <% rand_id = rand(100) %>
                <form action="/messages/image_selection?id=<%= rand_id %>" method="post">
                    <input type="image" src="https://picsum.photos/id/<%= rand_id %>/200/300" alt="Submit"  width="200" height="200">
                </form>

                <% rand_id2 = rand(100) %>
                <form action="/messages/image_selection2?id=<%= rand_id2 %>" method="post">
                   <input type="image" src="https://picsum.photos/id/<%= rand_id2 %>/200/300" alt="Submit"  width="200" height="200">
               </form>

            <% end %>
        <% else %>
           <%= "Host clicked show images" if message.action == 'show' %>
        <% end %>        
    </div>
</div>
