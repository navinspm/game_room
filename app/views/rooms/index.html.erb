<p style="color: green"><%= notice %></p>

<div class="pricing-header p-3 pb-md-4 mx-auto text-center">
  <h1 class="display-4 fw-normal">Photo Guessing Game</h1>
  <p class="fs-5 text-muted">Select Room To Begin</p>
</div>
  <main>
    <div class="row row-cols-1 row-cols-md-3 mb-3 text-center">
      <% @rooms.each do |room| %>
      <div class="col" id="rooms">
        <div class="card mb-4 rounded-3 shadow-sm">
          <div class="card-header py-3">
            <h4 class="my-0 fw-normal"> <%= room.name %></h4>
          </div>
          <div class="card-body">
            <img src="https://picsum.photos/300/300?random=<%=  room.id %>" alt=""><br><br>
            <%= link_to "Enter", room, class: "w-100 btn btn-lg btn-outline-primary" %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </main>

<%#= link_to "New room", new_room_path %>